#CLASS {cStats} {kill};
#CLASS {cStats} {open};

#FUNCTION {fColourStat}
{
  #MATH {temp[statdiv]} {10 * %1 / %2};
  #IF {$temp[statdiv] == 10}    {#VAR result {<afa>};};
  #ELSEIF {$temp[statdiv] >= 9} {#VAR result {<bfa>};};
  #ELSEIF {$temp[statdiv] >= 8} {#VAR result {<cfa>};};
  #ELSEIF {$temp[statdiv] >= 7} {#VAR result {<dfa>};};
  #ELSEIF {$temp[statdiv] >= 6} {#VAR result {<efa>};};
  #ELSEIF {$temp[statdiv] >= 5} {#VAR result {<ffa>};};
  #ELSEIF {$temp[statdiv] >= 4} {#VAR result {<fea>};};
  #ELSEIF {$temp[statdiv] >= 3} {#VAR result {<fda>};};
  #ELSEIF {$temp[statdiv] >= 2} {#VAR result {<fca>};};
  #ELSEIF {$temp[statdiv] >= 1} {#VAR result {<fba>};};
  #ELSE                         {#VAR result {<faa>};};
};

#ALIAS {.aHPBar}
{
  #NOP %1;
  #IF {@GuildHP{} == 1} {#NOP}
  {
    #FORMAT {vHPBar} {<AAB><fff>HP:%s%+4s<fff> SP:%s%+4s<fff> %s:%s%+4s<fff> %s:%s%+4s<fff> Vs:%s%-7s<fff>}
    {@fColourStat{{$my[hp][current]}{$my[hp][max]}}}
    {$my[hp][current]}
    {@fColourStat{{$my[sp][current]}{$my[sp][max]}}}
    {$my[sp][current]}
    {$my[gp1][name]}
    {@fColourStat{{$my[gp1][current]}{$my[gp1][max]}}}
    {$my[gp1][current]}
    {$my[gp2][name]}
    {@fColourStat{{$my[gp2][current]}{$my[gp2][max]}}}
    {$my[gp2][current]}
    {@fColourStat{{$opponent[hp]}{100}}}
    {$opponent[hp]};
  };

  #FORMAT {session[time]} {%t} {%R};
  #SHOWME {@fLinePad{{$vHPBar}{$session[time] $session[RebootTime] $session[name]}{}}} {1};
};
event_register e_hp_bar h_hp_bar .aHPBar;
event_register e_mip_FFF h_mip_fff .aHPBar;
.aHPBar;


#CLASS {cStats} {close};